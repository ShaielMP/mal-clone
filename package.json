{
  "name": "mal-clone",
  "version": "1.0.0",
  "description": "Modern MyAnimeList clone",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "libraries/*"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "test": "node --test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "migrate:make": "npm run migrate:make --workspace=apps/api --",
    "migrate:latest": "npm run migrate:latest --workspace=apps/api",
    "migrate:rollback": "npm run migrate:rollback --workspace=apps/api",
    "migrate:status": "npm run migrate:status --workspace=apps/api"
  },
  "keywords": [
    "anime",
    "myanimelist",
    "react",
    "node"
  ],
  "author": "Shaiel Montesdeoca Puga",
  "license": "MIT",
  "dependencies": {
    "eslint": "^9.38.0"
  }
}
