{
  "name": "@mal-clone/api",
  "version": "1.0.0",
  "description": "MAL Clone API",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "test": "cross-env NODE_ENV=test node --test tests/**/*.test.js",
    "migrate:make": "knex migrate:make --knexfile knexfile.cjs",
    "migrate:latest": "knex migrate:latest --knexfile knexfile.cjs",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.cjs",
    "migrate:status": "knex migrate:status --knexfile knexfile.cjs"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@mal-clone/error-handler": "file:../../libraries/error-handler",
    "@mal-clone/logger": "file:../../libraries/logger",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "fastify": "^4.25.2",
    "knex": "^3.1.0",
    "mysql2": "^3.9.1",
    "pino": "^10.1.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.3"
  }
}
